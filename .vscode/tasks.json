{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-php-server",
      "type": "shell",
      "command": "php",
      "args": [
        "-S",
        "127.0.0.1:8081",
        "-t",
        "${workspaceFolder}\\Site"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "php-server",
        "pattern": {
          "regexp": "^(.*)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Development Server started",
          "endsPattern": "Development Server started"
        }
      }
    }
  ]
}